

@using TravelTripMVC.Models.Entities
@model List<Blog>
@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devam >></span></a></p>
        </div>
    </div>
}

